## ðŸ“ˆ Metrics Over Time

<div id="charts-root"></div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const chartsData = {{ charts_json }};
  const metricNames = {{ metric_names | tojson | safe }};
  const rootContainer = document.getElementById('charts-root');

  if (!rootContainer || !window.Chart) return;

  const chartKeys = Object.keys(chartsData);
  if (chartKeys.length === 0) {
    rootContainer.innerHTML = '> ðŸ“­ *No historical metrics available to chart.*';
    return;
  }

  const themeColor = 'var(--md-typeset-a-color, #4051b5)';

  // 1. Group the data dynamically
  const groups = {
    laser: { title: "ðŸ”¦ Laser Performance", items: {} },
    optical: { title: "ðŸ”¬ Optical Resolution & Alignment", subGroups: {} },
    other: { title: "âš™ï¸ Environment & Stage Performance", items: {} }
  };

  for (const [metricId, chartConfig] of Object.entries(chartsData)) {
    if (metricId.startsWith('laser.')) {
      groups.laser.items[metricId] = chartConfig;
    } else if (metricId.startsWith('psf.') || metricId.startsWith('chromatic_shift.')) {
      const parts = metricId.split('.');
      const objId = parts.length > 2 ? parts[1] : 'General';
      if (!groups.optical.subGroups[objId]) groups.optical.subGroups[objId] = {};
      groups.optical.subGroups[objId][metricId] = chartConfig;
    } else {
      groups.other.items[metricId] = chartConfig;
    }
  }

  // 2. Helper to create a single Chart.js card
  function createChartCard(metricId, chartConfig) {
    let readableTitle = metricNames[metricId];
    if (!readableTitle) {
       const parts = metricId.split('.');
       const rawName = parts[parts.length - 1].replace(/_/g, ' ');
       readableTitle = rawName.split(' ').map(w => w.charAt(0).toUpperCase() + w.slice(1)).join(' ');
    }

    const wrapper = document.createElement('div');
    wrapper.style.padding = '1rem';
    wrapper.style.border = '1px solid var(--md-default-fg-color--lightest)';
    wrapper.style.borderRadius = '0.2rem';
    wrapper.style.backgroundColor = 'var(--md-default-bg-color)';
    wrapper.style.boxShadow = '0 4px 6px rgba(0,0,0,0.02)';

    const title = document.createElement('div');
    title.style.fontWeight = 'bold';
    title.style.marginBottom = '0.8rem';
    title.style.fontSize = '0.9rem';
    title.style.color = 'var(--md-default-fg-color)';
    title.textContent = readableTitle;
    wrapper.appendChild(title);

    const canvasContainer = document.createElement('div');
    canvasContainer.style.position = 'relative';
    canvasContainer.style.height = '200px';

    const canvas = document.createElement('canvas');
    canvasContainer.appendChild(canvas);
    wrapper.appendChild(canvasContainer);

    new Chart(canvas, {
      type: 'line',
      data: {
        labels: chartConfig.labels,
        datasets: [{
          label: readableTitle,
          data: chartConfig.values,
          borderColor: themeColor,
          backgroundColor: 'transparent',
          pointBackgroundColor: themeColor,
          borderWidth: 2,
          pointRadius: 3,
          tension: 0.2,
          spanGaps: true
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: { legend: { display: false } },
        scales: { 
            y: { beginAtZero: false },
            x: { ticks: { maxRotation: 45, minRotation: 45 } }
        }
      }
    });
    return wrapper;
  }

  // 3. Helper to render sections identically to MkDocs CSS grids
  function renderSection(title, contentBuilder) {
    const section = document.createElement('div');
    section.style.marginBottom = '2.5rem';
    
    const heading = document.createElement('h3');
    heading.textContent = title;
    heading.style.borderBottom = '1px solid var(--md-default-fg-color--lightest)';
    heading.style.paddingBottom = '0.5rem';
    section.appendChild(heading);

    const grid = document.createElement('div');
    grid.style.display = 'grid';
    grid.style.gridTemplateColumns = 'repeat(auto-fit, minmax(320px, 1fr))';
    grid.style.gap = '1rem';
    grid.style.marginTop = '1rem';
    
    contentBuilder(grid);
    section.appendChild(grid);
    rootContainer.appendChild(section);
  }

  // Render Laser Section
  if (Object.keys(groups.laser.items).length > 0) {
    renderSection(groups.laser.title, (grid) => {
      for (const [mId, config] of Object.entries(groups.laser.items)) {
        grid.appendChild(createChartCard(mId, config));
      }
    });
  }

  // Render Optical Section
  const objIds = Object.keys(groups.optical.subGroups);
  if (objIds.length > 0) {
    const section = document.createElement('div');
    section.style.marginBottom = '2.5rem';
    
    const heading = document.createElement('h3');
    heading.textContent = groups.optical.title;
    heading.style.borderBottom = '1px solid var(--md-default-fg-color--lightest)';
    heading.style.paddingBottom = '0.5rem';
    section.appendChild(heading);

    for (const objId of objIds) {
       const subHeading = document.createElement('h4');
       subHeading.textContent = objId.replace(/_/g, ' ').toUpperCase() + " Objective";
       subHeading.style.color = 'var(--md-default-fg-color--light)';
       subHeading.style.marginTop = '1.5rem';
       section.appendChild(subHeading);

       const grid = document.createElement('div');
       grid.style.display = 'grid';
       grid.style.gridTemplateColumns = 'repeat(auto-fit, minmax(320px, 1fr))';
       grid.style.gap = '1rem';
       grid.style.marginBottom = '1.5rem';

       for (const [mId, config] of Object.entries(groups.optical.subGroups[objId])) {
          grid.appendChild(createChartCard(mId, config));
       }
       section.appendChild(grid);
    }
    rootContainer.appendChild(section);
  }

  // Render Environment Section
  if (Object.keys(groups.other.items).length > 0) {
    renderSection(groups.other.title, (grid) => {
      for (const [mId, config] of Object.entries(groups.other.items)) {
        grid.appendChild(createChartCard(mId, config));
      }
    });
  }
});
</script>

